# App
APP_NAME="Education Management System"
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Supabase
SUPABASE_URL=http://kong:8000
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Cookie
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Session
SESSION_EXPIRE_MINUTES=1440
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:4173

# ============================================
# Line Login 設定（登入認證）
# 所有角色共用同一個 Line Login Channel
# 從 Line Developers Console 取得: https://developers.line.biz/
# ============================================

LINE_LOGIN_CHANNEL_ID=
LINE_LOGIN_CHANNEL_SECRET=
LINE_LOGIN_CALLBACK_URL=http://localhost:8001/api/v1/auth/line/callback

# ============================================
# Line Messaging 設定（發送通知）
# 每個角色使用不同的 Messaging API Channel
# 這樣學生/老師/員工會收到來自不同機器人的通知
# ============================================

# 學生通知頻道 - Messaging API Token
LINE_STUDENT_MESSAGING_TOKEN=

# 老師通知頻道 - Messaging API Token
LINE_TEACHER_MESSAGING_TOKEN=

# 員工通知頻道 - Messaging API Token
LINE_EMPLOYEE_MESSAGING_TOKEN=